! Xft settings ---------------------------------------------------------------

Xft.dpi:        96
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintslight

! xterm ----------------------------------------------------------------------

xterm*VT100.geometry:     80x25
xterm*faceName:           Terminus:style=Regular:size=8
!xterm*font:              -*-dina-medium-r-*-*-16-*-*-*-*-*-*-*
xterm*dynamicColors:      true
xterm*utf8:               2
xterm*eightBitInput:      true
xterm*saveLines:          512
xterm*scrollKey:          true
xterm*scrollTtyOutput:    false
xterm*scrollBar:          true
xterm*rightScrollBar:     true
xterm*jumpScroll:         true
xterm*multiScroll:        true
xterm*toolBar:            false

!Breeze theme ----------------------------------------------------------------

#define t_background		#31363b
#define t_current_line		#fcfcfc
#define t_selection      	#eff0f1
#define t_foreground      	#eff0f1
#define t_comment	     	#999999
#define t_red		     	#ed1515
#define t_orange	     	#f67400
#define t_yellow        	#fdbc4b
#define t_green	        	#11d116
#define t_aqua	        	#1abc9c
#define t_blue	        	#1d99f3
#define t_purple        	#9b59b6

*.foreground:   t_foreground
*.background:   t_background
*.cursorColor:  #fcfcfc

! Black / Grey
*.color0:       #31363b
*.color8:       #7f8c8d

! Red / Bright Red
*.color1:       t_red
*.color9:       #c0392b

! Green + Bright Green
*.color2:       t_green
*.color10:      #1cdc9a

! Yellow (Orange) + Bright Yellow (Yellow)
*.color3:       t_orange
*.color11:      t_yellow

! Blue + Bright Blue
*.color4:       t_blue
*.color12:      #3daee9

! Magenta (Purple) + Bright Magenta
*.color5:       t_purple
*.color13:      #8e44ad

! Cyan (Aqua) + Bright Cyan
*.color6:       t_aqua
*.color14:      #16a085

! Light Grey (Selection) + White (Current Line)
*.color7:       t_selection
*.color15:	t_current_line
